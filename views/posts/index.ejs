<%- include('../partials/header') %>

<!-- <div class="col-6"> -->
    <h1>Posts</h1>
    <% if (user) { %>
        <div>
            <form action="/posts" method="POST" class="post-form">
                <input type="text" name="content">
                <input type="submit" value="Post" id="post-button">
            </form>
        </div>

    <% } %>
    <div>
        <% posts.forEach(function(p) { %>
            <div class="posts">
                <img src="<%= p.userAvatar %>" alt="avatar" referrerpolicy="no-referrer" class="post-user">
                <p>
                    <a href="/posts/<%= p._id %>"><%= p.content %></a>
                </p>
                <p>
                    <%= p.userName %>
                </p>
            </div>
            <% }); %>
    </div>
<!-- </div> -->
    <%- include('../partials/footer') %>