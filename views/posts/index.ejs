<%- include('../partials/header') %>

    <h1>Posts</h1>
    <form action="/posts" method="POST">
        <input type="text" name="content">
        <input type="submit" value="Post">
    </form>
    <div>
        <% posts.forEach(function(p) { %>
            <div class="posts">
                <p>
                    <a href="/posts/<%= p._id %>"><%= p.content %></a>
                </p>
            </div>
            <% }); %>
    </div>

    <%- include('../partials/footer') %>